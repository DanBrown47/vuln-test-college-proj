{{#if NotVerifiedTutors}}
<section style="padding-left: 12px; padding-right: 8px;">
    
    <div class="container-fluid">
      <Center>
        <h3><b>Not verified Tutors List</b></h3>
         
      </Center>
        <div class="row">
          
      
        <table class="table  ml-5" style="background-color:#D3D3D3;">
          
            <thead>
            
             
                <tr style="background-color: #2F4F4F; color: #fff;">
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
					<th class="large-screen" scope="col">Email</th>
                    <th scope="col">Mobile</th>
                     <th class="large-screen" scope="col">Gender</th>  
                   <!-- <th scope="col">Quantity</th>-->
				   <th  scope="col">Status</th>
                    <th class="large-screen" scope="col">Details</th>
                    <th scope="col"></th>
                    
                </tr>
            </thead>
            <tbody>
               {{#each NotVerifiedTutors}}
                <tr>
                    <td style="width: 20%;">{{this.slno}}</td>
                          
                    <td style="width: 20%;">{{this.fname}} {{this.lname}}</td>
					<td class="large-screen" style="width: 20%;">{{this.email}}</td>
                    <td style="width: 20%;">{{this.mobile}}</td>
					<td class="large-screen" style="width: 20%;">{{this.gender}}</td>
                  <!--  <td style="width: 20%;">
                        <button class="cart-item-count "  onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user}}',-1)">-</button>
                         <span id="{{this.product._id}}">{{this.quantity}}</span>
                          <button class="cart-item-count" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user}}',1)">+</button>
                    </td>-->
				    <td style="width: 5%;">
						<!--
                       <a onclick="verifySignup('{{this._id}}','{{this.fname}}')" class="btn btn mt-1"  style="background-color: #696969; color: #fff;">Valdiate</a>
					   -->
	<div class="dropdown">
  <button class="large-screen btn btn dropdown-toggle" style="background-color: #696969; color: #fff;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Signup pending</button>
  <button class="small-screen btn btn dropdown-toggle" style="background-color: #696969; color: #fff;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Pending</button>
  <div class="dropdown-menu"  style="background-color: #696969; "aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" style="color: #fff;"  href="/institution/change-tutor-status/Signup verified/{{this._id}}" onclick="return confirm('Are you sure want to validate {{this.fname}} signup?')">Allow Signup</a> 
	  <a class="dropdown-item" style="color: #fff;"  href="/institution/change-tutor-status/Signup denyed/{{this._id}}" onclick="return confirm('Are you sure want to deny {{this.fname}} signup?')">Deny Signup</a> 
  </div>
</div>
                    </td>
                    <td class="large-screen"  style="width: 5%;">
                       <a onclick="tutorInfo('{{this._id}}')" data-toggle="modal" data-target="#studentprofile" class="btn btn mt-1"  style="background-color: #696969; color: #fff;"  ><i class="fas fa-info-circle"></i></a>
                    </td>
                   
                </tr>
              {{/each}}
            </tbody>
           <hr>
        </table>
        <hr>
       
        </div>
    </div>
    
</section>
    {{else}}         
    <section>
         <div class="container-fluid">
   <div class="container">
      <div class="row">
         <div class="col-md-12 text-center">
            <p class="mt-5">There is not any verification request</p>
            <a data-toggle="modal" data-target="#shareProduct" class="btn btn btn-sm" style="background-color:#222424; color: #fff;">Share link to Tutors</a>
         </div>
      </div>
   </div>
         </div>
    </section>             
        
    {{/if}}

 <style>
@media screen and (max-width: 600px) {
/*Hide in small Devices*/
.large-screen{
	display: none;
}
}
@media screen and (min-width: 600px) {
/*Hide in medium Devices*/
.small-screen{
	display: none;
  }

 </style>
 
 
 
 

 

